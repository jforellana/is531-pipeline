<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PDC DONUTS</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <div class="text-center">
      <h1 class="display-4">DONUTS</h1>
      <p>These are the world's best donuts</p>
    </div>

    <div class="menu-options">
      <div class="type-button">ALL</div>
      <div class="type-button">ICED</div>
      <div class="type-button">GLAZED</div>
      <div class="type-button">FILLED</div>
      <div class="type-button">CAKE</div>
      <div class="type-button">CHOCOLATE</div>
    </div>

    <div class="row">
      <% donuts.forEach(donut => { %>
      <div class="col-3">
        <div class="container" style="display: inline-block">
          <img src="<%= donut.image %>" alt="" />
          <p class="type-button no-bold"><%= donut.flavor %></p>
        </div>
      </div>
      <% }); %>
    </div>
  </body>
</html>
